<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER" prefHeight="400.0" prefWidth="640.0" spacing="10.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tnt.gui.playerchoosemenu.PlayerChooseController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="mainMenu" mnemonicParsing="false" onAction="#gotoHome" text="Home" />
            <VBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="maxStepUpHeight" text="Max step up:" />
                        <TextField fx:id="maxStepUp" prefWidth="40.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="maxStepDownHeight" text="Max step down:" />
                        <TextField fx:id="maxStepDown" prefWidth="40.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="maxBuildingHeightLabel" prefHeight="16.0" prefWidth="145.0" text="Max building height:" />
                        <TextField fx:id="victoryHeight" onKeyReleased="#updateGameSettings" prefWidth="40.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <HBox fx:id="tileBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <VBox fx:id="sepBox" alignment="TOP_CENTER">
               <children>
                  <Label fx:id="labelGlobalTilePool" text="seperate tile-pool for each player" />
                  <CheckBox fx:id="tilesSepBox" contentDisplay="TOP" mnemonicParsing="false" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <ScrollPane fx:id="playerPane" prefHeight="401.0" prefWidth="762.0">
         <content>
            <VBox fx:id="playerPaneSingle" prefHeight="200.0" prefWidth="100.0" />
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="addPlayerBtn" mnemonicParsing="false" onAction="#addPlayer" text="Add Player" />
            <VBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="boardSize" prefWidth="100.0" text="Spielfeld size" />
                        <TextField fx:id="fieldSizeX" prefWidth="40.0" />
                        <TextField fx:id="fieldSizeY" prefWidth="40.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="sphereWorldLabel" text="Enable sphere world" />
                        <CheckBox fx:id="roundWorld" mnemonicParsing="false" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <Label fx:id="setAmountOfFiguresLabel" text="Set nr of figures for all players" />
                        <HBox alignment="CENTER">
                           <children>
                              <TextField fx:id="amountOfFiguresAll" onAction="#setAmountOfFigures" prefWidth="40.0" text="2" />
                              <Button fx:id="amountFiguresButton" mnemonicParsing="false" onAction="#setAmountOfFigures" text="Set amount of figures" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#runGame" text="Play" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </children>
</fx:root>
