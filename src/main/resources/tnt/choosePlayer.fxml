<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" prefHeight="352.0" prefWidth="687.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tnt.gui.playerchoosemenu.PlayerChooseController">
   <children>
      <HBox alignment="CENTER" prefHeight="102.0" prefWidth="278.0" spacing="50.0">
         <children>
            <Label fx:id="labelPlayer1" text="Player 1" />
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label fx:id="labelPlayer1Name" text="Name:" />
                  <TextField fx:id="tfPlayer1Name" promptText="Player 1" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label fx:id="labelPlayer1Figures" text="Anzahl Figuren" />
                  <TextField fx:id="tfPlayer1Figures" text="2" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label fx:id="labelPlayer1Color" text="Farbe:" />
                  <ColorPicker fx:id="cpPlayer1Color">
                     <value>
                        <Color red="1.0" />
                     </value>
                  </ColorPicker>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Label fx:id="labelPlayer2" text="Player 2" />
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label fx:id="labelPlayer2Name" text="Name:" />
                  <TextField fx:id="tfPlayer2Name" promptText="Player 2" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label fx:id="labelPlayer2Figures" text="Anzahl Figuren" />
                  <TextField fx:id="tfPlayer2Figures" text="2" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label fx:id="labelPlayer2Color" text="Farbe:" />
                  <ColorPicker fx:id="cpPlayer2Color">
                     <value>
                        <Color blue="1.0" />
                     </value>
                  </ColorPicker>
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="playButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" text="Play!" />
      <Button fx:id="btnCounterUp" mnemonicParsing="false" onAction="#handleBtnCounterUpClick" prefWidth="100.0" text="+" />
      <Label fx:id="lblCounter" text="Counter: 0" />
      <Button fx:id="btnCounterDown" mnemonicParsing="false" onAction="#handleBtnCounterDownClick" prefWidth="100.0" text="-" />
   </children>
</VBox>
